<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper

  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"

  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.myapp.mapper.NoticeMapper">


  <!-- 게시글 조건 조회 -->
  <select id="select" resultType="org.zerock.myapp.domain.NoticeVO">
    SELECT * FROM notice
    WHERE no = #{no}
    <!-- 일단 번호로 시도! 차후에 아래 요구사항마다 검색했을 때 나오게끔 설정 할 예정 -->
    <!-- title = ${title} or content = ${content} or writer = ${writer} -->
  </select>


  <!-- 게시글 삭제 -->
  <delete id="delete">
    DELETE FROM notice
    WHERE no = #{no}
  </delete>
  
  <!-- 게시글 등록 -->
  <insert id="insert">
    INSERT INTO notice (title, content, writer)
  	VALUES (#{title}, #{content}, #{writer})
  </insert>
  
  
  <!-- 게시글 수정 -->
  <update id="update">
    UPDATE notice
  	SET
  		title = #{title},
  		content = #{content},
   		writer = #{writer},
  		update_date = current_date
  	WHERE
  		no = #{no}
  </update>
  

</mapper>
