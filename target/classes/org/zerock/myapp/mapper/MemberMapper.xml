<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.myapp.mapper.MemberMapper">

	<!-- 성별, 회원가입날짜, 생년월일 insert문 돌아가게 설정해줘야함!! -->
    <!-- memberJoin -->
    <insert id="memberJoin" parameterType="org.zerock.myapp.domain.MemberVO">
        INSERT INTO MEMBER_TEST
        VALUES(#{MEMBER_ID}, #{MEMBER_PW}, #{MEMBER_NAME}, #{MEMBER_MAIL}, #{MEMBER_HP}, #{MEMBER_ADDR1}, #{MEMBER_ADDR2}, #{MEMBER_ZIPCODE}, 0)
    </insert>

    
 
     <!-- 로그인 -->
     <select id="memberLogin" resultType="org.zerock.myapp.domain.UserVO">
         SELECT MEMBER_ID, MEMBER_NAME, ADMINCK FROM MEMBER WHERE MEMBER_ID = #{MEMBER_ID} and MEMBER_PW = #{MEMBER_PW}
     </select>
     
     
     <!-- 주문자 정보(찬돌) 컬럼명 변경되어야 할 부분 -->
     <select id="getMemberInfo" resultType="org.zerock.myapp.domain.MemberVo">
     	SELECT memberId, memberName, memberMail, MemberAddr1, MamberAddr2, MemberAddr3
     	FORM Member
     	WHERE MemberId = #{MemberId}
     </select>
     
     
