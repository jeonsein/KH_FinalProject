<!-- 카트 추가 -->
	<insert id="addCart">
	
		INSERT INTO cart(userid, productid, cart_count)
		values(#{userid}, #{productid}, #{cart_count}) 
	
	</insert>
	
	
	<!-- 카트 삭제 -->
	<delete id="deleteCart">
	
		delete from vam_cart where cartId = #{cartnumber}
	
	</delete>
	
	<!-- 카트 수량 수정 -->
	<update id="modifyCount">
	
		UPDATE cart set cart_count=#{cart_count} WHERE cartnumber = #{cartnumber}
	
	</update>
	
	
